doctype html
html
    head
        title Timer for Escape Room
        link(rel='stylesheet', href='css/main.css')
        script(src="https://cdn.socket.io/socket.io-1.3.3.js")
    body
        div.container
            h1 Login
            div#chat-box
                ul
                    form(action='')
                        p Choose your team :
                        select(type='select', name='team')
                            option(value='red') Red
                            option(value='blue') Blue

                        p Sub-Room :
                            select(type='select', name='sub-room')
                                option(value='a') A
                                option(value='b') B

                        p Level :
                            select(type='select', name='sub-room')
                                -for(var i = 1;i<=5;i++){
                                option(value="#{i}") Level #{i}
                                -}

                        button Send

        script
            var socket = io();
